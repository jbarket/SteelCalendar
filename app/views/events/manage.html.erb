<div class="row-fluid">

  <div class="box span9">
    <div class="box-header">
      <h2>
        <i class="icon-calendar"></i>
        <span class="break"></span>
        Manage My Events
      </h2>
    </div>
    <div class="box-content">

      <% if @events.count > 0 -%>

        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>City</th>
              <th>State</th>
              <th>Attendees</th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |e| -%>
              <tr>
                <td>
                  <%= link_to "View", e, :class => "btn" -%>
                  <%= link_to "Edit", edit_event_path(e),
                    :class => "btn" -%>
                <td><%= e.name -%></td>
                <td>
                  <% unless e.starts_at.blank? -%>
                    <%= e.starts_at.to_date.to_s(:long) -%>
                  <% end -%>
                </td>
                <td>
                  <% unless e.ends_at.blank? -%>
                    <%= e.ends_at.to_date.to_s(:long) -%>
                  <% end -%>
                </td>
                <td><%= e.city -%></td>
                <td><%= e.state -%></td>
                <td><%= e.attendees.count -%></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% else -%>
        <p>
          You haven't created any events!
          <%= link_to "Click here", new_event_path -%>
          to add one now.
        </p>
      <% end -%>
    </div>
  </div>

  <div class="box span3">
    <div class="box-header" data-original-title>
      <h2>
        <i class="icon-plus"></i>
        <span class="break"></span>
        Add New Events
      </h2>
    </div>
    <div class="box-content">
      <p>
        <strong>Are we missing an event?</strong>
        <br />
        Click the button below to add your local Warmachine events to the calendar.
      </p>

      <%= link_to 'Add New Event', new_event_path,
        :class => "btn btn-primary" %>
    </div>
  </div>

</div>

