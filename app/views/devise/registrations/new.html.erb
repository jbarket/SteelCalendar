<div class="row-fluid">
  <div class="login-box">
    <h2>Sign Up!</h2>
    <br />
    <%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>

      <%= devise_error_messages! %>

      <%= f.label :email %>
      <%= f.email_field :email, :class => "span12" %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, :class => "span12" %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class => "span12" %>

      <%= f.label :password %>
      <%= f.password_field :password, :class => "span12" %>

      <%= f.label :password_confirmation,
        "Password Confirmation" %>
      <%= f.password_field :password, :class => "span12" %>

      <%= f.label :photo -%>
      <%= f.file_field :photo, :class => "span12" -%>

      <br /><br />

      <div class="clearfix"></div>

      <%= f.submit "Sign Up",
        :class => "btn btn-primary span12" %>

      <hr>
      <h3>Have an account already?</h3>
      <p>
        No worries,
        <%= link_to "click here",
        new_user_session_path(resource_name) %>
        to login.
      </p>

    <% end -%>

  </div><!--/span-->
</div><!--/row-->
